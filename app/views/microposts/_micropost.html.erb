<li id="<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <div class = "whole_page">
    <div class = "top_half">
      
      <div class = "top_left_corner">
        <div class="title"> <%= micropost.title %></div>
        
        <div class = "description"> <%= micropost.description %></div>
        <div class = "cooking_times">
          <div class = "prep_time"><b>Prep:</b> <%= micropost.prep_time %> min</div>
          <div class = "cook_time"><b>Cook:</b> <%= micropost.cook_time %> min</div>
        </div>
        <div class = "ingredients"><b>Ingredients</b><br /><%= micropost.ingredients %></div>
      </div>
      <div class = "picture"><%= image_tag micropost.picture.url if micropost.picture? %> </div>
    </div>
   
    <div class = "directions"><b>Directions</b></b><br /><%= micropost.directions %></div>
  </div>
 
  

  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>