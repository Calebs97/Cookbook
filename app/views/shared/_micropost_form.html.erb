<%= form_for(@micropost, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="field">
    <%= f.label :recipe_title %>
    <%= f.text_area :title, placeholder: "Name of dish" %>
  </div>
  
  <div id="container_sidebyside">
    <div class="field">
    <%= f.label :prep_time %>
    <%= f.text_area :prep_time %>
    </div>
    <div class="field">
    <%= f.label :cook_time %>
    <%= f.text_area :cook_time %>
    </div>
  </div>
  
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Describe your dish" %>
  </div>
  <div class="field">
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients, placeholder: "One ingredient per line" %>
  </div>
  <div class="field">
    <%= f.label :directions %>
    <%= f.text_area :directions, placeholder: "One step per line" %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <span class="picture">
    <%= f.label :picture %>
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
<% end %>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>